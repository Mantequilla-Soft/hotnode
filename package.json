{
  "name": "ipfs-hotnode",
  "version": "1.0.0",
  "description": "Lightweight IPFS hot node service for temporary high-speed storage with automatic migration to supernode",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development node app.js",
    "init-db": "node scripts/initDatabase.js",

    "worker:validate": "node -e 'require(\"./workers/mongoValidator\").run().then(r => console.log(r))'",
    "worker:migrate": "node -e 'require(\"./workers/migrationWorker\").run().then(r => console.log(r))'",
    "worker:cleanup": "node -e 'require(\"./workers/cleanupWorker\").run().then(r => console.log(r))'",
    "worker:stats": "node -e 'require(\"./workers/statsAggregator\").run().then(r => console.log(r))'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ipfs",
    "hotnode",
    "video",
    "storage",
    "migration"
  ],
  "author": "3Speak",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chart.js": "^4.4.1",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.0.2",
    "tail": "^2.2.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
